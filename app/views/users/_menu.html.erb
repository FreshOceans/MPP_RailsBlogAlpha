<!-- ======= views/menu ======= -->

<div id="menu">

    <% puts "**** session[:user_id]: #{session[:user_id]} ****" %>

    <% if session[:user_id] %>
        <%= link_to 'Feed', feed_path, class: "menu_item" %>
        <%= link_to 'Directory', users_path, class: "menu_item" %>
        <%= link_to 'Profile', user_path(session[:user_id]), class: "menu_item" %>
        <%= link_to 'Publish', new_user_post_path(session[:user_id]), class: "menu_item" %>
        <%= link_to 'Signout', destroy_user_session_path, class: "menu_item" %>
    <% else %>
        <%= link_to 'Home', "/", class: "menu_item" %>
        <%= link_to 'Signin', new_user_session_path, class: "menu_item" %>
        <%= link_to 'Register', new_user_registration_path, class: "menu_item" %>
    <% end %>

</div>
